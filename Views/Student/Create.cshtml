@model ViewModelTableFormation.ViewModel.CreateStudentModel

@{
    ViewData["Title"] = "Create Student";
}

<h2>Create Student</h2>
<div class="container">
<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

  
    <div class="row">
    <!-- Student Name -->
        <div class="form-group col-lg-6 mt-2">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter Student Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Address -->
        <div class="form-group col-lg-6 mt-2">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" placeholder="Enter Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <!-- Gmail -->
        <div class="form-group col-lg-6 mt-2">
        <label asp-for="Gmail" class="control-label"></label>
        <input asp-for="Gmail" class="form-control" placeholder="Enter Gmail Address" />
        <span asp-validation-for="Gmail" class="text-danger"></span>
    </div>

    <!-- Date of Birth -->
        <div class="form-group col-lg-6 mt-2">
        <label asp-for="DateofBirth" class="control-label"></label>
        <input asp-for="DateofBirth" class="form-control" type="date" />
        <span asp-validation-for="DateofBirth" class="text-danger"></span>
    </div>

    <!-- Course Dropdown -->
        <div class="form-group col-lg-6 mt-2">
        <label asp-for="CourseId" class="control-label"></label>
        <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Course"></select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>


        <div class="form-group col-lg-6 mt-2">
            <label asp-for="Image" class="control-label"></label>
            <div class="custom-file form-control">
                <input asp-for="Image" class="custom-file-input" id="customFile">
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
    <!-- Submit Button -->
    <div class="mt-5">
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
</div>