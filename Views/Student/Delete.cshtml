@model ViewModelTableFormation.Models.Student

<h2>Delete Student</h2>

<h3>Are you sure you want to delete this student?</h3>

<form asp-action="Delete" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control" readonly />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Gmail">Gmail</label>
            <input asp-for="Gmail" class="form-control" readonly />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="DateofBirth">Date of Birth</label>
            <input asp-for="DateofBirth" class="form-control" type="date" readonly />
        </div>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="CourseId">Course ID</label>
        <input asp-for="CourseId" class="form-control" readonly />
    </div>

    <!-- Hidden field to pass the ID -->
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
