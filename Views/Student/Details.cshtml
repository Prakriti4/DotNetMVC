@model ViewModelTableFormation.ViewModel.StudentDetailsModel


@{
    ViewData["Title"] = "Student Details";
}

<h2>@ViewData["Title"]</h2>


    <h4>Student</h4>
    <hr />
   
    <dl class="row">
        <div class="col-lg-6">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gmail)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateofBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateofBirth)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>
        </div>

        <div class="col-lg-6">
           
            <dd class="col-sm-10">
                <img src="@Url.Content("~/images/" + Model.ImageUrl)" alt="Student Image" style="width: 40vw; height:auto;" />
            </dd>
        </div>
    </dl>


<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
