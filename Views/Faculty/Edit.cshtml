@model ViewModelTableFormation.Models.Faculty

@* @{
    ViewData["Title"] = "Edit Faculty";
} *@

<h2>Edit Faculty Form</h2>

<form asp-controller="Faculty" asp-action="Edit" method="post">
    <!-- Faculty ID (Hidden) -->
    <input type="hidden" asp-for="Id" />

    <!-- Name -->
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter Faculty Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Dean -->
    <div class="form-group">
        <label asp-for="Dean" class="control-label"></label>
        <input asp-for="Dean" class="form-control" placeholder="Enter Dean's Name">
        <span asp-validation-for="Dean" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Courses (Multiple Select) -->
   

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
