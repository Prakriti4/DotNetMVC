@model ViewModelTableFormation.Models.Course

@{
    ViewData["Title"] = "Edit Course";
}

<h2>Create Course</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <!-- Course Name -->
    <div class="form-group">
        <label asp-for="CourseName" class="control-label"></label>
        <input asp-for="CourseName" class="form-control" placeholder="Enter Course Name" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>

    <!-- Course Code -->
    <div class="form-group">
        <label asp-for="CourseCode" class="control-label"></label>
        <input asp-for="CourseCode" class="form-control" placeholder="Enter Course Code" />
        <span asp-validation-for="CourseCode" class="text-danger"></span>
    </div>

    <!-- Credits -->
    <div class="form-group">
        <label asp-for="Credits" class="control-label"></label>
        <input asp-for="Credits" class="form-control" placeholder="Enter Credits" type="number" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter Course Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Tuition Fee -->
    <div class="form-group">
        <label asp-for="TuitionFee" class="control-label"></label>
        <input asp-for="TuitionFee" class="form-control" placeholder="Enter Tuition Fee" type="number" step="0.01" />
        <span asp-validation-for="TuitionFee" class="text-danger"></span>
    </div>

    <!-- Start Date -->
    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <!-- End Date -->
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <!-- Faculty Dropdown -->
    <div class="form-group">
        <label asp-for="FacultyId" class="control-label"></label>
        <select asp-for="FacultyId" class="form-control" asp-items="ViewBag.Faculties"></select>
        <span asp-validation-for="FacultyId" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
