@model ViewModelTableFormation.Models.Course

<h2>Delete Course</h2>

<h3>Are you sure you want to delete this course?</h3>

<form asp-action="Delete" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="CourseName">Course Name</label>
            <input asp-for="CourseName" class="form-control" readonly />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="CourseCode">Course Code</label>
            <input asp-for="CourseCode" class="form-control" readonly />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Credits">Credits</label>
            <input asp-for="Credits" class="form-control" readonly />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="TuitionFee">Tuition Fee</label>
            <input asp-for="TuitionFee" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" readonly></textarea>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="StartDate">Start Date</label>
            <input asp-for="StartDate" class="form-control" type="date" readonly />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="EndDate">End Date</label>
            <input asp-for="EndDate" class="form-control" type="date" readonly />
        </div>
    </div>



    <!-- Hidden field to pass the ID -->
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
